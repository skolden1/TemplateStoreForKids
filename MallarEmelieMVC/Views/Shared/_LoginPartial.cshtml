@using MallarEmelieMVC.Areas.Identity.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUserTable> SignInManager
@inject UserManager<IdentityUserTable> UserManager

<ul class="navbar-nav navbar-login">
    @if (SignInManager.IsSignedIn(User))
    {
        var currentUser = await UserManager.GetUserAsync(User);
        var firstName = currentUser?.FirstName ?? User.Identity?.Name;
        var profilePicture = currentUser?.ProfilePicture;
        var defaultAvatarUrl = Url.Content("~/images/ironman.png");

        <li class="nav-item d-flex align-items-center">
            <a class="nav-link text-dark d-flex align-items-center identity-profile-text" asp-area="Identity" asp-page="/Account/Manage/Index" title="Profil">
                <img src="@(string.IsNullOrEmpty(profilePicture) ? defaultAvatarUrl : profilePicture)"
                     alt="Profilbild"
                     style="width:32px; height:32px; border-radius:50%; object-fit:cover; margin-right:8px;" />
                <span>Profil</span>
            </a>
        </li>
        <li class="nav-item d-flex align-items-center">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark p-0 m-0">Logga ut</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Registrera</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Logga in</a>
        </li>
    }
</ul>