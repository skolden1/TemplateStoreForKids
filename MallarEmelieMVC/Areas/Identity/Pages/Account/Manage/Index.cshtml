@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Ditt användarnamn" disabled />
                <label asp-for="Username" class="form-label">Användarnamn (ej redigerbart)</label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Ange ditt telefonnummer" />
                <label asp-for="Input.PhoneNumber" class="form-label">Telefonnummer</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="ProfilePictureUpload" class="form-label">Profilbild</label>
                <input type="file" id="ProfilePicture" name="ProfilePictureUpload" class="form-control" />
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Spara ändringar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}